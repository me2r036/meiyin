/**
 * Helper function
 *
 * Gets uid of refferral's referer.
 */
 function _wedding_commission_get_advanced_coworker($uid) {
   $query = db_query('SELECT referral_uid FROM {referral} WHERE uid = :uid', array(':uid' => $uid));
   return $query->fetchField();
 }

/**
 * Helper function
 *
 * Gets refferral's profile infomation.
 * @param $uid
 * @param $field_name
 * @param $delta
 * @return string value
 */
function _wedding_commission_get_profile_info($uid, $field_name, $delta) {
  $profile = profile2_load_by_user($uid, PROFILE_TYPE);     
  return $profile->{$field_name}[LANGUAGE_NONE][$delta]['value'];
}

/**
 * Helper function
 *
 * Updates referer's profile infomation, when:
 *  1. user submitting a form to refer a customer;
 *  2. user submission getting confirmed.
 */
function  _wedding_commission_update_profile($uid, $confirmed = FALSE) {
  $profile = profile2_load_by_user($uid, PROFILE_TYPE);

  if (!empty($profile)) {
    $base_url = $GLOBALS['base_url'];
    $phone_number = $profile->field_mobile[LANGUAGE_NONE][0]['value'];
    $content_vars = array(
      'coworker' => $profile->field_coworker[LANGUAGE_NONE][0]['value'],
      'url' => $base_url,
    );

    // Loads this coworker's referer if any
    $advanced_coworker_uid = _wedding_commission_get_advanced_coworker($uid);

    if(!$confirmed) {
      $profile->field_performance[LANGUAGE_NONE][1]['value']++;

      // If this user has a referer, inform this referral as well
      if($advanced_coworker_uid) {
        $advanced_coworker_profile = profile2_load_by_user($advanced_coworker_uid, PROFILE_TYPE);

        // Send 'coworker_advanced_referred' message to advanced coworker
        $adv_phone_number = $advanced_coworker_profile->field_mobile[LANGUAGE_NONE][0]['value'];
        $adv_template_name = 'coworker_advanced_referred';
        $adv_content_var = array(
          'coworker' => $advanced_coworker_profile->field_coworker[LANGUAGE_NONE][0]['value'],
          'url' => $base_url,
        );
        // Send message
        _wedding_commission_send_message($adv_phone_number, $adv_template_name, $adv_content_var);
      }

      // Prepare 'coworker_referred' message
      $template_name = 'coworker_referred';
    }
    else {
      $profile->field_performance[LANGUAGE_NONE][0]['value']++;
      $profile->field_income[LANGUAGE_NONE][0]['value'] += $profile->field_commission[LANGUAGE_NONE][0]['value'];

      if($advanced_coworker_uid) {
        $advanced_coworker_profile = profile2_load_by_user($advanced_coworker_uid, PROFILE_TYPE);
        $advanced_coworker_profile->field_income[LANGUAGE_NONE][1]['value'] += $advanced_coworker_profile->field_commission[LANGUAGE_NONE][1]['value'];

        profile2_save($advanced_coworker_profile);

        // Send 'coworker_advanced_success' message to advanced coworker
        $adv_phone_number = $advanced_coworker_profile->field_mobile[LANGUAGE_NONE][0]['value'];
        $adv_template_name = 'coworker_advanced_success';
        $adv_content_var = array(
          'coworker' => $advanced_coworker_profile->field_coworker[LANGUAGE_NONE][0]['value'],
          'url' => $base_url,
          'amount' => $advanced_coworker_profile->field_commission[LANGUAGE_NONE][1]['value'],
        );
        // Send message
        _wedding_commission_send_message($adv_phone_number, $adv_template_name, $adv_content_var);
      }

      // Prepare 'coworker_success' message
      $template_name = 'coworker_success';
      $content_vars['amount'] = $profile->field_commission[LANGUAGE_NONE][0]['value'];
    }

    // Update user submission success rate
    $success = $profile->field_performance[LANGUAGE_NONE][0]['value'];
    $total = $profile->field_performance[LANGUAGE_NONE][1]['value'];
    $profile->field_success_rate[LANGUAGE_NONE][0]['value'] = _wedding_commission_calculate_success_rate($success, $total);

    profile2_save($profile);

    // Send message
    _wedding_commission_send_message($phone_number, $template_name, $content_vars);
  }
}

/**
 * Helper function
 *
 * Updates user success rate of submissions.
 */
function _wedding_commission_calculate_success_rate($success, $total) {
  if ($total == 0) {
    return 0;
  }
  else {
    return number_format($success / $total * 100, 2);
  }
}


/**
 * Implements hook_node_presave().
 *
 * Check whether the customer is referred by any referer, if so update ref-customer status.
 */
function wedding_commission_node_presave($node) {
  if ($node->type == 'wedding') {
    $roles = $GLOBALS['user']->roles;
    $is_admin = in_array('administrator', array_values($roles));
    $is_editor = in_array('editor', array_values($roles));
    $is_staff = in_array('staff', array_values($roles));
    $authorised = $is_admin || $is_editor || $is_staff;

    if ($authorised) {
      // If the wedding node is newly creating (rather than updating)
      if (!isset($node->nid) || !empty($node->is_new)) {
        // Initialising multi-value fields
        _wedding_commission_initialise_multi_value_fields($node);
      }

      // Before creating or updating, check if there are referers
      module_load_include('inc', 'webform', 'includes/webform.submissions');
      $existing_submissions = webform_get_submissions(array('nid' => REF_CUST_WEBFORM_NID, 'is_draft' => 0));
      $related_submissions = _wedding_commission_get_related_submissions($node, $existing_submissions);

      $wedding_status = &$node->field_wedding_status[LANGUAGE_NONE][0]['value'];

      if (isset($related_submissions)) {
        if ($wedding_status == 'contacted' || $wedding_status == 'ordered') {
          _wedding_commission_process_related_submissions($node, $related_submissions);
        }
        elseif ($wedding_status == 'cancelled' || $wedding_status == 'finished') {
          $wedding_status_old = $node->original->field_wedding_status[LANGUAGE_NONE][0]['value'];
          if ($wedding_status_old != 'cancelled' && $wedding_status_old != 'finished') {
            _wedding_commission_update_submissions($related_submissions, $wedding_status);
          }
        }
      }
      else {
        drupal_set_message('此婚礼订单无推荐人。', 'status', FALSE);
        if ($wedding_status == 'ordered') {
          $wedding_status = 'confirmed';
          drupal_set_message('此婚礼订单状态已更新为"已确认"。', 'status', FALSE);
        }
      }

      // Determines whether to send message
      $sendmessage = FALSE;
      $template_name = '';
      $content_vars = array();
      if (!isset($node->nid) || !empty($node->is_new)) {
        $sendmessage = TRUE;
        $template_name = 'service_enquiry';
        $content_vars = array(
          'groom_name' => $node->field_groom[LANGUAGE_NONE][0]['value'],
          'bride_name' => $node->field_bride[LANGUAGE_NONE][0]['value'],
          'landline' => LANDLINE,
          'mobile' => MOBILE,
          'url' => $GLOBALS['base_url'],
        );
      }
      else {
        if ($node->original->field_wedding_status[LANGUAGE_NONE][0]['value'] == 'contacted' &&
          ($wedding_status == 'ordered' || $wedding_status == 'confirmed')) {
          $sendmessage = TRUE;
          $template_name = 'service_confirmed';
          $content_vars = array(
            'groom_name' => $node->field_groom[LANGUAGE_NONE][0]['value'],
            'bride_name' => $node->field_bride[LANGUAGE_NONE][0]['value'],
            'info_url' => _wedding_commission_get_short_url('node/96'),
            'landline' => LANDLINE,
            'mobile' => MOBILE,
            'url' => $GLOBALS['base_url'],
          );
        }
        elseif ($node->original->field_wedding_status[LANGUAGE_NONE][0]['value'] == 'confirmed' &&
          $wedding_status == 'finished') {
          $sendmessage = TRUE;
          $template_name = 'service_finished';
          $content_vars = array(
            'groom_name' => $node->field_groom[LANGUAGE_NONE][0]['value'],
            'bride_name' => $node->field_bride[LANGUAGE_NONE][0]['value'],
          );

          // Unpublish the wedding node while the wedding is finished
          $node->status = 0;
        }
      }

      if ($sendmessage) {
        // Prepare message to send when creating/updating wedding node
        $phone_numbers = array(
          $node->field_groom_mobile[LANGUAGE_NONE][0]['value'],
          $node->field_bride_mobile[LANGUAGE_NONE][0]['value'],
        );

        // Send message
        _wedding_commission_send_message($phone_numbers, $template_name, $content_vars);
      }
    }

    if ($is_admin || $is_editor) {
      // Sets wedding total amounts
      _wedding_commission_wedding_set_total($node);
    }

    // Clear messages queue if current user is anonymous
    if (user_is_anonymous()) {
      // Clear the cache for anonymous users
      entity_get_controller('node')->resetCache(array($node->nid));
      drupal_get_messages();
    }
  }
}

/**
 * Helper function
 * Implements _wedding_commission_initialise_multi_value_fields().
 *
 * Initialise multi-value fields in wedding node.
 *
 * Data model: 2D array as follows
 *                    field_referer_id    feidl_referer_submission_id   field_referer_commission
 *  婚宴场地      (0)

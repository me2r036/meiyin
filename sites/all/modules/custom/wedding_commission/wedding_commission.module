/**
 * Implements wedding_commission_sendmessage_cron().
 *
 * Checks the current confirmed wedding at 15:00 daily, send message for related weddings.
 */
function wedding_commission_sendmessage_cron() {
  $weddings = _wedding_commission_get_weddings(array(
    'field_wedding_status' => array(
      'value' => 'confirmed',
      'operator' => '=',
    ),
  ));

  if (!empty($weddings)) {
    foreach ($weddings as $wedding) {
      watchdog('wedding_commission', 'sendmessage cron: wedding nid ' . $wedding->nid . ' <br /><pre>' . print_r($wedding, TRUE) . '</pre>', array(), WATCHDOG_INFO, l(t('view'), 'node/' . $wedding->nid));

      // Calculates event remaining days
      $date_value = field_get_items('node', $wedding, 'field_wedding_date')[0]['value'];
      $wedding_date = new DateObject($date_value, date_default_timezone(), DATE_FORMAT_DATETIME);
      $now_date = date_now();
      $remaining_days = $wedding_date->difference($now_date, 'days');
      watchdog('wedding_commission', 'wedding nid '. $wedding->nid . ' remaining: ' . $remaining_days . ' days', array(), WATCHDOG_INFO);

      if ($remaining_days == 3) {
        watchdog('wedding_commission', 'wedding nid ' . $wedding->nid . ' remaining: ' . $remaining_days . ' days', array(), WATCHDOG_INFO);

        // Prepares message parameters
        $phone_numbers = array(
          $wedding->field_groom_mobile[LANGUAGE_NONE][0]['value'],
          $wedding->field_bride_mobile[LANGUAGE_NONE][0]['value'],
        );
        $template_name = 'customer_reminder';
        $content_vars = array(
          'groom_name' => $wedding->field_groom[LANGUAGE_NONE][0]['value'],
          'bride_name' => $wedding->field_bride[LANGUAGE_NONE][0]['value'],
          'day_counter' => '3',
          'url' => _wedding_commission_get_short_url('node/'. $wedding->nid),
          'list_url' => _wedding_commission_get_short_url('node/97'),
        );

        // Publishes the wedding
        $wedding->status = 1;
        node_save($wedding);
        watchdog('wedding_commission', 'sendmessage cron: wedding nid ' . $wedding->nid . ' published', array(), WATCHDOG_INFO, l(t('view'), 'node/' . $wedding->nid));

        _wedding_commission_send_message($phone_numbers, $template_name, $content_vars);
      }
      elseif ($remaining_days == 1) {
        watchdog('wedding_commission', 'wedding nid ' . $wedding->nid . ' remaining: ' . $remaining_days . ' day', array(), WATCHDOG_INFO);

        // Prepares message parameters
        $contacts_info = _wedding_commission_get_wedding_contacts_info($wedding);
        $short_url = _wedding_commission_get_short_url('node/' . $wedding->nid);
        // Checks whether $contacts_info is empty
        if (!empty($contacts_info['mobile'])) {
          $phone_numbers = $contacts_info['mobile'];
          $template_name = 'customer_wedding_contact';
          foreach($contacts_info['name'] as $key => $name) {
            $content_vars[$key] = array(
              'name' => $name,
              'groom_name' => $wedding->field_groom[LANGUAGE_NONE][0]['value'],
              'bride_name' => $wedding->field_bride[LANGUAGE_NONE][0]['value'],
              'url' => $short_url,
            );
          }
          _wedding_commission_send_message($phone_numbers, $template_name, $content_vars, TRUE);
        }

        $phone_numbers = array(
          $wedding->field_groom_mobile[LANGUAGE_NONE][0]['value'],
          $wedding->field_bride_mobile[LANGUAGE_NONE][0]['value'],
        );
        $template_name = 'customer_contact_confirmation';
        $content_vars = array(
          'groom_name' => $wedding->field_groom[LANGUAGE_NONE][0]['value'],
          'bride_name' => $wedding->field_bride[LANGUAGE_NONE][0]['value'],
          'url' => $short_url,
        );

        _wedding_commission_send_message($phone_numbers, $template_name, $content_vars);
      }
      elseif ($remaining_days == 0) {
        watchdog('wedding_commission', 'wedding nid ' . $wedding->nid . ' remaining: ' . $remaining_days . ' day', array(), WATCHDOG_INFO);

        $contacts_info = _wedding_commission_get_wedding_contacts_info($wedding);
        // Checks whether $contacts_info is empty
        if (!empty($contacts_info['mobile'])) {
          $phone_numbers = $contacts_info['mobile'];
          $template_name = 'customer_contact_bye';
          foreach($contacts_info['name'] as $key => $name) {
            $content_vars[$key] = array(
              'name' => $name,
              'groom_name' => $wedding->field_groom[LANGUAGE_NONE][0]['value'],
              'bride_name' => $wedding->field_bride[LANGUAGE_NONE][0]['value'],
              'url' => $GLOBALS['base_url'],
            );
          }

          _wedding_commission_send_message($phone_numbers, $template_name, $content_vars, TRUE);
        }

        $wedding->field_wedding_status[LANGUAGE_NONE][0]['value'] = 'finished';
        $wedding->uid = FINISHED_WEDDING_UID;
        node_save($wedding);
        watchdog('wedding_commission', 'sendmessage cron: wedding nid ' . $wedding->nid . ' unpublished', array(), WATCHDOG_INFO, l(t('view'), 'node/' . $wedding->nid));
      }
    }
  }
}

/**
 * Helper function
 *
 * Get short url from giving long url.
 *
 * @return string short url or NULL.
 */
function _wedding_commission_get_short_url($path, array $options = array()) {
  if (empty($options['absolute'])) {
    $options['absolute'] = TRUE;
  }
  $short_url_info = shurly_shorten(url($path, $options));
  if (!empty($short_url_info['success'])) {
    $short_url = $short_url_info['shortUrl'];
    watchdog('wedding_commission', 'ShURly shortUrl is ' . $short_url . ' . <br /><pre>' . print_r($short_url_info, TRUE) . '</pre>', array(), WATCHDOG_INFO, l(t('view'), $path));
    return $short_url;
  }
  else {
    watchdog('wedding_commission', 'ShURly error <br />' . $short_url_info['error'], array(), WATCHDOG_ERROR, l(t('view'), $path));
    return NULL;
  }
}

/**
 * Helper function
 *
 * Get information of wedding contacts
 *  (in group_wedding_information of the wedding node)
 *
 * @return array $contacts_info - 2D array
 */
function _wedding_commission_get_wedding_contacts_info($node) {
  // Get all field_names in group_wedding_information
  $group_info = field_group_info_groups('node', 'wedding');
  $field_names = array_values($group_info['default']['group_wedding_information']->children);

  $contacts_info = array();
  foreach ($field_names as $key => $field_name) {
    if (preg_match('/(.*)_mobile$/', $field_name, $matches)) {
      if (!empty($node->{$field_name})) {
        $mobile = $node->{$field_name}[LANGUAGE_NONE][0]['value'];
        $contacts_info['name'][] = $node->{$matches[1]}[LANGUAGE_NONE][0]['value']; 
        $contacts_info['mobile'][] = $mobile;
      }
    }
  }

  return $contacts_info;
}

/**
 * Returns HTML for remaining message.
 */
function wedding_commission_date_display_remaining($variables) {
  $remaining_days = $variables['remaining_days'];
  $output = '';
  $show_remaining_text = t('The upcoming date less than 1 day.');
  if ($remaining_days) {
    $show_remaining_text = format_plural($remaining_days, 'To event remaining 1 day', 'To event remaining @count days');
  }

  return '<div class="date-display-remaining"><span class="date-display-remaining">' . $show_remaining_text . '</span></div>';
}

/**
 * Implements hook_init().
 *
 * Disables caching of coworker registration pages.
 */
function wedding_commission_init() {
  if (current_path() == 'coworker' || current_path() == 'coworker-advanced') {
    drupal_page_is_cacheable(FALSE);
  }
}
